@page "/statistics"
<h3 class="text-center">Statistics Page</h3>
<div class="container">
    <div class="row">
        <div class="col-4">
            <h5 style="text-align:end" class="font-weight-bold mt-1">Game level: </h5>
        </div>
        <div class="col-8">
            <select class="form-control">
                <option selected value="1">Beginer</option>
                <option value="2">Intermediate</option>
                <option value="3">Advanced</option>
            </select>
        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="best-games-container">
                <ul class="list-group">
                    <li class="list-group-item active text-center">Best games:</li>
                    <li class="list-group-item">game 1</li>
                    <li class="list-group-item">game 2</li>
                    <li class="list-group-item">game 3</li>
                    <li class="list-group-item">game 4</li>
                </ul>
            </div>
        </div>
        <div class="col-4">
            <div class="container">
                <div class="row">
                    <div class="col-8 align-content-end">
                        <h6 class="font-weight-bold">Played games: </h6>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly class="form-control"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <h6 class="font-weight-bold">Victories: </h6>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <h6 class="font-weight-bold">Percentage of victories: </h6>
                    </div>
                    <div class="col-4">
                        <input type="text" readonly class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<Footer SecondaryButtonText="Back to game" PrimaryButtonText="Reset"></Footer>
